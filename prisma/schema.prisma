

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("NEXT_DATABASE_URL")
}

model User {
  id       Int      @id @default(autoincrement())
  email    String   @unique
  username String   @unique
  password String
  celphone String?
  createAt DateTime @default(now())
  updateUt DateTime @updatedAt
  travels  Travel[]
}

model Travel {
  id          Int         @id @default(autoincrement())
  origin      String
  destination String
  time        String
  date        DateTime
  userId      Int
  passengers  Passenger[]
  user        User        @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("travels")
}

model Passenger {
  id           Int      @id @default(autoincrement())
  tripId       Int
  name         String
  createdAt    DateTime @default(now())
  number       String
  street       String
  price        String
  celphone     String?
  observation  String?
  neighborhood String
  Travel       Travel   @relation(fields: [tripId], references: [id], onDelete: Cascade)

  @@map("passengers")
}
